.contact
    position: relative
    padding: 50px 0
    background: color-one
    width: 100%
    overflow: hidden

    &__container 
        display: container

    &__title 
        font-size: 18px
        font-weight: bold 
        text-transform: uppercase
        text-align: center
        color: #fff
        padding-bottom: 20px


    div.wpcf7 .ajax-loader
        position: absolute 
        top: 0 
        left: 0 
        z-index: 20
        width: 100% 
        height: 100% 
        background: rgba(0,0,0,.5)
        &:before 
            content: ''
            position: absolute 
            top: 50%
            left: 50%
            width: 45px 
            height: 45px 
            border: solid 4px #fff 
            border-top-color: transparent 
            border-radius: 50% 
            transform: translateX(-50%) translateY(-50%)
            animation: loading 400ms infinite

    .wpcf7-validation-errors
        display: none !important

    .wpcf7-not-valid-tip
        position: absolute 
        top: -28px
        right: 0
        font-size: 0 
        font-weight: regular
        width: 15px
        height: 15px 
        border-radius: 50% 
        background: #ff0000
        color: #fff 
        display: flex
        justify-content: center  
        align-items: center 
        transition: transition
        cursor: pointer

        &:after 
            content : '?'
            font-size: 9px

    label 
        position: relative
        display: block
        padding-top: 20px 
        span:first-child
            position: absolute 
            top: 20px
            left: 0
            z-index: 10
            display: flex 
            justify-content: flex-start 
            align-items: center 
            height: calc(100% - 20px)
            width: 100%
            padding: 0 15px 
            font-size: 14px 
            font-weight: regular
            transition: transition
            color: color-two

        &:hover 
            .wpcf7-not-valid-tip 
                width: auto 
                padding: 0 10px
                border-radius: 2px
                font-size: 9px 
                &:after 
                    display: none 

        &.textarea span:first-child 
            align-items: flex-start 
            padding-top: 15px
        
        &.on 
            span:first-child 
                max-height: 20px 
                top: 0 
                font-size: 11px 
                padding: 0
                color: #fff

            &.textarea span:first-child   
                align-items: center
                padding-top: 0  


        input 
            width: 100%

        textarea 
            width: 100%

    .wpcf7-submit
        display: block
        width: 100%
        margin-top: 20px 
        background: color-three
        color: #fff

@media (min-width: 500px)
    .contact 
        .inline 
            display: flex 
            margin: s('0 %s', -(gutter / 2))
            > div 
                flex: 1 1 auto
                padding: 0 (gutter / 2)
    
@media (min-width: 992px)
    .contact 
        &__title
            font-size: 24px
        form 
            display: flex 
            align-items: stretch
            margin: -(gutter / 2)
            .col 
                flex: 0 0 50%
                padding: (gutter / 2)
        textarea 
            height: 94px
        