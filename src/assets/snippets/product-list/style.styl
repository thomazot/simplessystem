.product-list 
    padding: 50px 0

    &--suprimentos
        border-top: solid 1px color-one

    &__container 
        display: container

    &__footer 
        text-align: center 
        padding: 50px 0

    &__title 
        display: block 
        padding: 0 0 50px 
        font-size: 24px
        font-weight: bold 
        text-transform: uppercase 
        color: color-one
        text-align: center

    &__list 
        display: flex 
        justify-content: space-between
        align-items: flex-start 
        flex-flow: row wrap
        margin: - (gutter / 2)

    &__item 
        flex: 1 1 315px
        padding: (gutter / 2)
        background: #fff

        &--empty 
            padding: 0

    &__name
        display: block 
        padding: 10px 0 
        font-size: 14px 
        font-weight: semi-bold 
        color: color-one 
        text-transform: uppercase

    &__description 
        font-size: 12px
        font-weight: regular 
        color: color-two

@media (min-width: 992px)
    .product-list 
        &__title 
            font-size: 32px
            text-align: left
        &__item
            position: relative 
            z-index: 1
            border-radius: 3px 
            transition: transition 

            &:hover 
                z-index: 2
                box-shadow: 0 0 10px rgba(0,0,0,.2)

.codificadores
    .product-list__title
        opacity: 0 
        transform: translateX(100%)
        transition: transition 

    .product-list__list
        opacity: 0 
        transform: translateY(100%)
        transition: transition 

    &__container--show
        .product-list__title
            opacity: 1
            transform: translateX(0)

        .product-list__list
            opacity: 1
            transform: translateY(0)

.suprimentos
    .product-list__title
        opacity: 0 
        transform: translateX(-100%)
        transition: transition 

    .product-list__list
        opacity: 0 
        transform: translateY(-100%)
        transition: transition 

    &__container--show
        .product-list__title
            opacity: 1
            transform: translateX(0)

        .product-list__list
            opacity: 1
            transform: translateY(0)
