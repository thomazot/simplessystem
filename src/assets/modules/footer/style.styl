.footer 
    border-top: solid 10px color-one
    text-align: center 

    &__copyright 
        text-align: center 
        font-size: 12px
        color: color-two 
        padding: 20px 0
        border-top: solid 1px color-one

    &__title 
        font-size: 14px
        font-weight: bold 
        text-transform: uppercase 
        padding-bottom: 10px
        color: color-one

    &__contact 
        font-size: 13px
        color: color-one

        strong 
            display: block 

        div 
            padding: 10px 0

    &__social 
        display: flex 
        justify-content: space-around
        font-size: 30px 
        padding: 20px 0 0

    &__logo 
        text-align: center
        img 
            max-width: 200px 

    &__container  
        display: container
        padding: 20px 0


        > div, > nav 
            padding: (gutter / 2)

    .menu
        &__item--0 
            + .menu__item--0 
                margin-top: gutter
        &__link 
            display: block

            &--first 
                font-size: 14px
                font-weight: bold 
                text-transform: uppercase 
                padding-bottom: 10px
                pointer-events: none

            &--sub 
                padding: 5px 0

@media (min-width: 768px)
    .footer 
        text-align: left
        &__logo 
            text-align: left

        &__container 
            display: flex 
            justify-content: space-between

@media (min-width: 992px)
    .footer 
        .menu
            flex: 1 1 auto
            &__container
                display: flex 
                justify-content: space-around
                align-items: flex-start

            &__item--0 + .menu__item--0
                margin-top: 0
                margin-left: 30px 