@keyframes loading 
    from 
        transform: rotate(0)
    to 
        transform: rotate(360deg)

@keyframes updown 
    0%
        transform: translateY(0)
    50% 
        transform: translateY(5px)
    100% 
        transform: translateY(0)

@keyframes bannerTitle 
    from 
        transform: translateX(100%)
        opacity: 0
    to 
        transform: translateX(0)
        opacity: 1

@keyframes bannerDescription 
    from 
        transform: translateX(-100%)
        opacity: 0
    to 
        transform: translateX(0)
        opacity: 1